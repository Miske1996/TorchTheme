{{ 'featured-products-card-section.css' | asset_url | stylesheet_tag }}

<div class="featured_product_section_container" id="{{ section.id }}">
  <div class="card_featured" style="background-color:{{ section.settings.bg_color }};color:{{ section.settings.text_color }}">
    <div class="top_title">
      <span>{{ section.settings.product_text_1 }}</span>
    </div>
    <div class="hook_title">
      <span>{{ section.settings.product_text_2 }}</span>
    </div>
    <div class="price_text">
      <span>{{ section.settings.product_price | money }}</span>
    </div>
    <div class="buy_button" style="background-color:{{ section.settings.button_bg }};color:{{ section.settings.button_text }}">
      <span>Get it</span>
    </div>
    <animated-card class="animated-card">
      <div class="image_container"><img
          class="card_img backwardAnimation"
          loading="lazy"
          src="{{ section.settings.product_image |  image_url  }}"
          alt=""></div>
    </animated-card>
  </div>
</div>


{% schema %}
  {
    "name": "Featured Product Settings",
    "settings": [
      {
        "type": "text",
        "id": "product_text_1",
        "label": "First Product Header",
        "default": "Cary 11"
      },
      {
        "type": "text",
        "id": "product_text_2",
        "label": "First Product Hook",
        "default": "Believe you can do Anything"
      },
      {
        "type": "number",
        "id": "product_price",
        "label": "Price product",
        "default": 100
      },
      {
        "type": "image_picker",
        "id": "product_image",
        "label": "Image Product"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#EDFF00"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "button_bg",
        "label": "Button Background Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "button_text",
        "label": "Button Background Color",
        "default": "#FFFFFF"
      }
    ]
  }
{% endschema %}